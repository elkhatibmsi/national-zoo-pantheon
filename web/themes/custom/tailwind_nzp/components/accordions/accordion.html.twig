{{ attach_library('tailwind_nzp/alpinejs') }}
{{ attach_library('tailwind_nzp/alpine_accordion') }}

<div x-data="dropdown" class="accordion-item border-b-[1px] rounded-none">
			<h2 class="accordion-header mb-0" id="flush-headingOne">
				<button @click="toggle" class="relative  flex items-center w-full py-4 px-5 border-0 rounded-none transition focus:outline-none text-left" type="button" aria-expanded="false">
					{{label}}
					<span class="absolute right-6 flex items-center">
						<span x-show="open">-</span>  
                   		<span x-show="!open">+</span>
				   </span>   
				</button>
			</h2>
			<div 
      x-show="open"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 transform -translate-y-2"
      x-transition:enter-end="opacity-100 transform translate-y-0"
      x-transition:leave="opacity-0 transition ease-in duration-300"
		<div class="accordion-body py-4 px-5">{{body}}</div>
		</div>