{% set thumbnails = [] %}
{% set gallery = [] %}

{% for key, media in items %}
	{% set thumbnail =  media.content['#media'] | view('gallery_thumbnail')  %}
	{% set gallery_item =  media.content['#media'] | view('media_and_caption') %}

	{% set gallery = gallery|merge([gallery_item]) %}
	{% set thumbnails = thumbnails|merge([thumbnail]) %}

{% endfor %}

 {%
		include '@nzpComponents/media/grid-media-gallery.html.twig' with {
			gallery:  gallery,
			thumbnails: thumbnails,		
            } 
%}
