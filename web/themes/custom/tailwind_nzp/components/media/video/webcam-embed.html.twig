
{# 

Variables:
video_id: unique ID for each video container
poster_image_url: poster image/thumbnail of the video while stopped
timeout: duration of stream before stopping
timeout_message: message to display afer timeout. 
source_url: source_url
 #}


{{ attach_library('tailwind_nzp/webcam_embed') }}
<div class="webcam-embed-{{video_id}} relative">
<video id="{{video_id}}"
    class="hls-container w-full"
    data-timeout= "{{timeout}}"
    playsinline controls 
    data-src="{{source_url}}"
    poster="{{poster_image_url}}"
  >
  </video>
  <div class="timeout-msg absolute bg-black bg-opacity-70 inset-0 flex items-center justify-center" style="display:none;">
  <div class="timeout-msg--inner text-white text-2xl w-max-content">{{timeout_message}}</div><button type="button" class="timeout-close z-[100] top-[5%] absolute right-4 text-oxford-blue bg-lightestgray hover:bg-gray hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray dark:hover:text-white">
			<svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
			</svg>
			<span class="sr-only">Close modal</span>
		</button></div>
</div>