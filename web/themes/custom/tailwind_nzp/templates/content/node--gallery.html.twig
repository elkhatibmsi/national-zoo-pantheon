{% set thumbnails = [] %}
{% set gallery = [] %}

{% for key, media in node.field_gallery_items %}
	{% set thumbnail =  media.entity | view('gallery_thumbnail')  %}
	{% set gallery_item =  media.entity | view('default') %}

	{% set gallery = gallery|merge([gallery_item]) %}
	{% set thumbnails = thumbnails|merge([thumbnail]) %}

{% endfor %}

 {%
		include '@nzpComponents/media/modal-media-gallery.html.twig' with {
			gallery:  gallery,
			thumbnails: thumbnails,		
            } 
%}
