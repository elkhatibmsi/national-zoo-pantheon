{{ attach_library('tailwind_nzp/teaser_styles_js') }}
<div class="my-4">
  <div class="w-full lg:max-w-full min-h-[150px] lg:flex">

    {% if image|render %}
      <div class="teaser-img-container h-full lg:h-auto flex-none bg-cover text-center overflow-hidden">
        {{ image }}
      </div>
    {% endif %}
    <div class="card-horizontal--teaser mt-2 lg:ml-4">
        {% if authored_date|render %}
        <div class="text-xs strong uppercase mb-2"> 
        {{ authored_date }}
      </div>
      {% endif %}
      <a href="{{ link }}"><h4 class="font-semi-bold text-xl">{{ title }} â€º</h4></a>
     {% if summary|render %}
      <div class="text-sm">
        {{ summary }}
      </div> 
     {% endif %}
    </div>
  </div>
</div>
